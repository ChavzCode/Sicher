<section class="container min-link">
    <div class="link-list">
        {{#each rows}}
            <div class="link-info link-{{id}}">
                <div>
                    <a href="{{url}}" target="_blank">
                        <h3 class="text-center">{{title}}</h3>
                    </a>
                    <p class="link-description">{{description}}</p>
                </div>
                <div>
                    <p class="creation-date">{{timeago creationDate}}</p>
                    <div class="btn-container">
                        <a href="links/delete/{{id}}" class="btn btn-list btn-delete">Delete</a>
                        <a href="links/edit/{{id}} " class="btn btn-list btn-edit ">Edit</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="container havent">
                <div class="hero-container">
                    <h1>You have not Sicher any link</h1>
                    <div class="get-started-btn sicher-link">
                        <a href="/links/add">Sicher a link</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>

</section>

<section class="container">
    <div class="advanced-features">
        <div class="feature feature-api">
            <a href="/api">Manage Api</a>
        </div>
        <div class="feature shared-links">
            <a href="/shared">Shared Links</a>
        </div>
    </div>
</section>